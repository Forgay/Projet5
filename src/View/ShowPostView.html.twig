{% extends 'AdminsLayout.html.twig' %}
{% block content %}
    <h2>Listing des articles</h2>
    <hr/>
    <div class="row">
        {% for post in posts %}
            <div class="col s12">
                <h4>{{ post.title }}<i class='material-icons'>lock</i></h4>
                <div class="row">
                    <div class="col s12 m6 l8">
                        {{ post.content }}
                    </div>
                    <div class="col s12 m6 l4">
                        <img src="/img/posts/{{ post.image }}" class="materialboxed responsive-img"
                             alt="{{ post.title }}"/>
                        <br/><br/>
                        <a class="btn light-blue waves-effect waves-light indigo lighten-2"
                           href="/post/show/{{ post.id }}">Modifier l'article</a>
                        <a class="btn light-blue waves-effect waves-light indigo lighten-2"
                           href="/deletepost/{{ post.id }}">Effacer l'article</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}