{% extends 'AdminsLayout.html.twig' %}
{% block content %}
    <div class="section">
    <div class="row">
        <div class="center col l4 m6 s12 offset-l4 offset-m3">
            <div class="card-panel">
                <div class="row">
                    <img src="../../Web/img/admin.png" alt="administrateur" width="50%"/>
                </div>
                <h4 class="center-align">Se connecter</h4>
                <form action="/connecting" method="POST">
                    {% for data in error %}
                        <div class="errors">
                            <ul>
                                <li>{{ data }}</li>
                            </ul>
                        </div>
                    {% endfor %}
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" id="pseudo" name="pseudo"/>
                            <label for="pseudo">Votre pseudo</label>
                        </div>
                        <div class="input-field col s12">
                            <input type="email" id="email" name="email"/>
                            <label for="email">votre adresse mail</label>
                        </div>
                        <div class="input-field col s12">
                            <input type="password" id="password" name="password"/>
                            <label for="password">Mot de passe</label>
                        </div>
                    </div>
                    <button type="submit" name="submit" class="waves-effect waves-light btn indigo lighten-2"
                            style="margin-bottom: 10px;">
                        <i class="material-icons left">perm_identity</i>
                        Se connecter
                    </button>
                </form>
            </div>
            <a href="/login" type="submit" name="submit" class="waves-effect waves-light btn indigo lighten-2"
               style="margin-bottom: 10px">
                <i class="material-icons left">perm_identity</i>Rejoindre</a>

            <a href="/reset" type="submit" name="reset" class="waves-effect waves-light btn indigo lighten-2">
                <i class="material-icons left">perm_identity</i>
                mot de passe perdu
            </a>
        </div>
    </div>
{% endblock %}